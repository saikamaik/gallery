<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextInputLayoutWithError">
        <item name="android:textSize">@dimen/regular_text_size_for_auth</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/triangle_danger</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="cursorColor">@color/pink</item>
    </style>

    <style name="TextInputLayoutWithoutError">
        <item name="android:textSize">@dimen/regular_text_size_for_auth</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="cursorColor">@color/pink</item>
    </style>

    <style name="EditTextPadding">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="ButtonPrimary">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonSecondary">
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Header">
        <item name="android:textSize">@dimen/headers_auth_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">2dp</item>
    </style>

</resources>